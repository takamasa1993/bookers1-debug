<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |list| %>
      <tr>
        <td><%= list.title %></td>
        <td><%= list.body %></td>
        <td><%= link_to 'Show', "/books/#{list.id}" %></td>
        <td><%= link_to 'Edit', "/books/#{list.id}/edit" %></td>
        <td><%= link_to 'Destroy', book_path(list), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>New book</h2>
<%= render 'books/form',book: @book%>
